<%= stylesheet_link_tag 'new', :media => "all" %>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for @tweet do |f| %>
        <div class="field">
          <%= f.label :body %>
          <%= f.text_field :body, :size => 140 %>
        </div>

    　<div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

    <%= f.submit "Tweetする"%>
    <br>
    <% end %>
</div>